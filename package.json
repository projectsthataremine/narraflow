{
  "name": "narraflow-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "NarraFlow monorepo containing Electron app, marketing site, and Supabase backend",
  "scripts": {
    "dev:electron": "cd electron && npm run dev",
    "dev:marketing": "cd marketing-site && npm run dev",
    "build:electron": "cd electron && npm run build",
    "build:marketing": "cd marketing-site && npm run build",
    "test:electron": "cd electron && npm test",
    "lint:electron": "cd electron && npm run lint",
    "publish:electron": "cd electron && npm run publish",
    "publish:mac:arm64": "cd electron && npm run publish:mac:arm64",
    "publish:mac:x64": "cd electron && npm run publish:mac:x64"
  },
  "workspaces": [
    "electron",
    "marketing-site"
  ]
}
