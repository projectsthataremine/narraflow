{
  "name": "mic2text",
  "version": "0.1.0",
  "description": "Offline speech-to-text with hotkey activation for macOS",
  "main": "dist/main/main/index.js",
  "author": "Mic2Text Team",
  "license": "MIT",
  "scripts": {
    "dev": "npm run copy:helper && concurrently \"npm run dev:vite\" \"npm run dev:main\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:main": "tsc -p tsconfig.json --watch",
    "dev:electron": "wait-on http://localhost:5173/ui/index.html && ORT_LOGGING_LEVEL=error NODE_ENV=development electron .",
    "build": "tsc && vite build && npm run copy:helper",
    "build:main": "tsc -p tsconfig.json",
    "build:renderer": "vite build",
    "build:worker": "tsc -p tsconfig.worker.json",
    "copy:helper": "mkdir -p dist/fn-key-helper/build && cp -r fn-key-helper/build/Mic2TextFnHelper.app dist/fn-key-helper/build/ 2>/dev/null || true",
    "start": "electron .",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test-bench": "npm run build:worker && ts-node src/tuning/test-bench.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "bindings": "^1.5.0",
    "electron": "^30.0.0",
    "node-addon-api": "^8.5.0",
    "node-machine-id": "^1.1.12",
    "node-record-lpcm16": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "node-gyp": "^11.4.2",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.3",
    "vitest": "^1.2.0",
    "wait-on": "^7.2.0"
  }
}
